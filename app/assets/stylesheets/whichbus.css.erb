/* MOBILE CSS */
@media only screen and (max-width: 767px) {
	body {
		font-size: 10px;
	}
	/* make the map canvas smaller on mobile screens */
	div#map_canvas {
		height: 200px;
		border-bottom: 3px solid #4e4d4d;
		border-top: 2px solid #4e4d4d;
	}

	/* move the map canvas to left edge of screen*/
	div.map-container {
		left: 0;
		border: none;
	}

	/* move the left sidebar to below the map and fill the screen */
	div.left-sidebar {
		top: 250px;
		width: 100%;
	}

	div.header {
		font-weight: bold;
		overflow: hidden;
		white-space: nowrap;
		text-overflow: ellipsis;
	}
	div.header input {
		font-size: 12px;
		padding: 4px 3px 2px;
	}

	h1.pacifico {
		margin: 0 0 25px;
		font-size: 3.2rem;
		line-height: 3.6rem;
	}

	img.logo { 
		padding: 20px 0;
		width: 75%;
	}

	form.directions, form.new_user, div.auth {
		padding: 15px 0;
		width: 90%;
		margin: auto;
		margin-bottom: 30px;
	}
	input.directions {
		display: block;
	}

	label { margin-bottom: 0 !important;}
	input.input-text.search-box, input.input-text.user, label {
		display: block;
		width: 80%;
		margin: auto;
		margin-bottom: 10px
	}

	button.button.search {
		margin: 5px auto;
		display: block;
		width: 180px;
		padding: 10px 15px 4px;
	}

	.nav-bar li a {
		padding: 0 10px;
	}

	.nav-bar li input {
		margin: 0;
	}

	.journey.description {
		max-width: 100%;
	}
}

