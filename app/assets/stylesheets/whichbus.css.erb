/* JOURNEY TIME COLORINGS */
.now, .late {
	/* 0 to 6 */
	color: red;
}
.now { font-variant: small-caps; }

.soon {
	/* 7 to 15 */
	color: orange;
}

.soonish, .early {
	/* 15 to 36 */
	color: green;
}

.later {
	/* >36 */
	color: blue;
}

.gone {
	/* <0 */
	color: gray;
	/*font-variant: small-caps;*/
}

.border {
