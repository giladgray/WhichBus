/* contains the entire page, makes it fill the entire screen*/
.container {
	overflow: hidden;
	height: 100%;
	width: 100%;
	padding: 0;
	margin: 0;
}

/* clears any width constraints */
.display {
	min-width: 0;
	max-width: none;
}

.ellipsis {
	text-overflow: ellipsis;
	white-space: nowrap;
	overflow: hidden;
	display: inline-block;
}

.expand { width: 100%;}

/* the sidebar on the left! scrolls automatically, never makes the page scroll */
div.left-sidebar {
	width: 320px;
	background-color: #E7E6E6;
	z-index: 10;
	position: absolute;
	top: 45px;
	bottom: 0;
	overflow-x: hidden;
	overflow-y: auto;
}

/* the list within the sidebar */
ul.list, div#comments {
	overflow-y: auto;
	overflow-x: hidden;
	position: absolute;
	bottom: 30px;
	top: 75px;
  	background: #E9F2F5; /*url("<%= image_path 'grayfabricbg.jpg' %>") repeat;*/
}
ul.list.two-up, ul.list.three-up {
	width: 104%;
}

ul.list, ul.list li {
	margin: 0;
	width: 100%;
}
ul.list li {
  border-bottom: 1px solid #ccc;
  border-top: 1px solid white;
}
ul.list li:first-child { border-top: none; }
/*ul.list li:last-child  { border-bottom: none; }*/

/* div that contains the map canvas*/
div.map-container {
	background-color: white;
	overflow: none;
	position: absolute;
	top: 45px;
	bottom: 0;
	right: 0;
	left: 320px;
	overflow-x: hidden;
	border-left: 1px solid #7D8073;
	border-top: 1px solid #7D8073;
}

/* styling for map canvas itself*/
div#map_canvas {
	width: 100%;
	height: 100%;

}

/* make sure the navbar is always 45px tall */

.nav-bar {
	background: transparent;
	border: none;
	margin: 0;
}

.nav-bar li {
	border: none;
	color: white
}

.nav-bar li a {
	color: white;
