<% content_for :title do "Login" end %>

<div class="row">
	<div class="auth eight columns centered">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<div class="row">
				<div class="twelve columns">
					<h1 class="pacifico text-center">Come inside, friend</h1>
				</div>
			</div>
			<div class="row">
			<div class="four columns offset-by-two">
			<div class="row">
				<%= devise_error_messages! %>
			</div>
			<div class="row">
				<div class="twelve columns centered">
					<%= f.label :email %>
					<%= f.email_field :email, :class => "input-text oversize user", :placeholder => "email address" %>
				</div>
			</div>

			<div class="row">
				<div class="twelve columns centered">
					<%= f.label :password %>
					<%= f.password_field :password, :class => "input-text oversize user", :placeholder => "password" %>
				</div>
			</div>

		<% if devise_mapping.rememberable? -%>
			<div class="row">
				<div class="twelve phone-two columns centered">
					<span class="checkbox-box">
			    		<%= f.check_box :remember_me %> <%= f.label :remember_me, style: "display: inline" %>
			    	</span>
		    	</div>
		    </div>
		<% end -%>

		  
			<div class="row">
			  	<div class="twelve columns centered">
			  		<%= f.button "Sign in", :type => :submit, :class => "button search radius whichbus-green" %>
			  	</div>
			</div>
		</div>
		<div class="three columns offset-by-one">
			<div class="row">
				<div class="twelve columns centered">
					<%= render "links" %>
				</div>
			</div>
		</div>
	</div>
		<% end %>
	</div>
</div>