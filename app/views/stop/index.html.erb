<!-- Stop index -->

<% content_for :title do "Nearby Stops" end %>
<% content_for :page_title do %>
<div class="row display">
  <div class="two phone-one columns">
    <span class="route_num"><%= @stops.length %></span>
  </div>
  <div class="ten phone-three columns">
    <span style="text-align:left">Nearby Stops</span>
  </div>
</div>
<% end %>

<% content_for :model_list do %>
  <% @stops.each do |stop| %>
  <div class="row display well journey">
    <span class="journey description"><%= link_to truncate(stop.name, :length => 32), stop_path(stop.id) %></span>
    <span class="journey time">
      <div class="row"><%= stop.distance.round(2) %>mi</div>
    </span>
  </div>
  <% end %>
<% end %>
  
<!-- TODO make this a display row in the javascript -->
<ul id="stop_list">
</ul>