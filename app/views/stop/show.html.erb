<!-- Stop show -->
<% content_for :title do "WhichBus :: #{@stop.name}" end %>

<h2><%= @stop.name %> (<%= @stop.direction %>)</h2> <br/>
ID: <%= @stop.id %> <br/>
(<%= @stop.lat %>, <%= @stop.lon %>)

<hr/>

<ul>
<% @stop.routes.each do |r| %>
	<li><%= link_to "#{r['shortName']} #{r['direction']}", route_path(r["id"]) %></li>
<% end %>
</ul>