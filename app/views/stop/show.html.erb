<!-- Stop show -->
<% content_for :title do "WhichBus :: #{@stop.name}" end %>

<h2><%= @stop.name %> (<%= @stop.direction %>)</h2> <br/>
ID: <%= @stop.id %> <br/>
(<%= @stop.lat %>, <%= @stop.lon %>)

<hr/>

<ul>
<% @stop.routes.each do |r| %>
	<li>
		<%= link_to "#{r.shortName} #{r.direction}", route_path(r.id) %>&nbsp;
		<% @times.find_all {|t| r.id == t.routeId }.each do |time| %>
			<%= time.time_to_arrival_in_words %>&nbsp;
		<% end %>
	</li>
<% end %>
</ul>