<!-- Stop show -->
<% content_for :title do "WhichBus :: #{@stop.name}" end %>

<% content_for :mobile do %>
<%= render "layouts/mobile_header"%>
<% end %>

<%= render "arrival_list" %>

<h2><%= @stop.name %> (<%= @stop.direction %>)</h2> <br/>
ID: <%= @stop.id %> <br/>
(<%= @stop.lat %>, <%= @stop.lon %>)

<hr/>

<ul>
<% @stop.routes.each do |r| %>
	<li>
		<%= link_to "#{r.shortName} #{r.direction}", route_path(r.id) %>&nbsp;
		<% r.arrivals.each do |arr| %>
			<%= arr.time_to_arrival_in_words(@time) %>
			<!--|<%= arr.time_to_departure_in_words(@time) %>-->
			&nbsp;
		<% end %>
	</li>
<% end %>
</ul>