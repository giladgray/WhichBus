<% content_for :head do %>
<script type="text/javascript">
	function showRoute(route) {
		initializeMap(function() {loadRouteTrips(route)}, null, true);
		loadRoute(route);
	}
</script>
<% end %>

<!-- Route Show -->
<% content_for :title do
  "Route #{@route.shortName}"
end %>

<% content_for :page_title do %>
	<%= content_tag :span, @route.shortName, class: "route button radius" %>
	<%= content_tag :span, @route.description, class: "route description" %>
	<%= button_tag image_tag('refreshicon.png'), name: nil, class: "button refresh radius whichbus-green", onclick: "refreshData()", title:"Refresh" %>
<% end %>

<% content_for :onload do
  "showRoute('#{params[:id]}')"
  #"initializeMap(function() {loadRoute('#{params[:id]}')}, null, true);"
end %>