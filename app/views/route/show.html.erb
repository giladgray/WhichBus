<!-- Route Show -->
<% content_for :title do "Route #{@route.shortName}" end %>

<% content_for :page_title do  %>
	<span class="route button radius"><%= @route.shortName %></span>
	<%= @route.description %>
<% end %>

<% content_for :model_list do %>
	<% @route.stops.each do |stop| %>
	<div class="row display journey">
		<span class="journey description">
			<%= link_to stop.name, stop_path(stop.id), :class => "journey description" %>
		</span>
	</div>
	<% end %>
<% end %>