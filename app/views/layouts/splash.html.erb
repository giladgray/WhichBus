  <body<%= content_for?(:onload) ? " onload=#{yield(:onload)}" : "" %>>
    <%= render "layouts/header"%>
	 	<div class="row" style="text-align:center;">
			<% flash.each do |name, msg| %>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>
			<%= content_tag :h1, yield(:title) if show_title? %>
		</div>
    <%= yield %>  
