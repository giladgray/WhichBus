<head>
<meta charset="utf-8" />

  <!-- Set the viewport width to device width for mobile -->
 

    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :all %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %><!--[if lt IE 9]>
    <link rel="stylesheet" href="stylesheets/ie.css">
  <![endif]-->

  <!-- IE Fix for HTML5 Tags -->
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="viewport" content="width=470, initial-scale=1, user-scalable=no">

<style type="text/css">

.container {margin:25px;}

#title {font-size:6rem} 

body {
background:#e7e6e6;
background-repeat:repeat-xy; 
}

.phone input {margin:10px 0px; }



</style>

</head>
 <body>
  <div class="container show-on-phones phone">
      <div class="row" style="margin-left:auto; margin-right:auto;">
        <div class="one columns centered" >
          <%= image_tag "whichbuslogo.png" , :size => "320x0"%>
        </div>
      
        <div class="one columns centered">
          <input style="width:300px;" type="text" name="from" placeholder="Where from, yo?">
        </div>
        <div class="one columns centered">
        <input  style="width:300px;"type="text" name="to" placeholder="And where to?">
        </div>
        <div class="one columns centered">
        <%= image_tag "mapbutton.png" , :size => "300x0" %> 
        </div>
      </div>
  </div>

  <!-- container -->
  <div class="show-on-desktops container">

    <div class="row">
      <div class="twelve columns">
      <%= image_tag "whichbus_text.png", :size => "220x0"%>
      </div>
    </div>
    <div class="row">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
    </div>
  </body>
</html>
