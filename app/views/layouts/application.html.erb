<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html lang="en"> <!--<![endif]-->

<head>
    <meta charset="utf-8" />

    <!-- Set the viewport width to device width for mobile -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="viewport" content="width=320, initial-scale=1, user-scalable=no">

    <title>WhichBus<%= content_for?(:title) ? " | " + yield(:title) : "" %></title>
    <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBjJxK5PWs_HUYDfkLxHPZumnjV6ORDIDs&sensor=true"></script>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %><!--[if lt IE 9]>
    <link rel="stylesheet" href="stylesheets/ie.css">
    <![endif]-->

  <!-- IE Fix for HTML5 Tags -->
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->


<meta name="apple-mobile-web-app-capable" content="yes">
<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">


<style type="text/css">
#title {font-size:6rem} 

body {
background:#e7e6e6;
background-repeat:repeat-xy; 
}

.phone input {margin:0px; }
.container {margin:25px;}

.phone {max-width:320px;} 

h1,h2,h4,h5 {color: #7D8073; font-family:Pacifico,'Tahoma',serif; }


</style>

</head>

<body onload="<%=yield(:onload) if content_for?(:onload)%>">

  <%= render("layouts/universal_layout") %>
  
	<div class="show-on-desktops show-on-tablets container" style="padding:0; width=100%; margin:auto; text-align:center;">
		<div class="row display topbarimage">
            <%= link_to image_tag("aboutbutton.jpg"), "/" %>
            <%= link_to image_tag("teambutton.jpg"), "/" %>
            <%= link_to image_tag("contactbutton.jpg"), "/" %>
            <%= image_tag "headerslice.jpg", :style => "width:300px; height:50px;" %>
            <%= link_to image_tag("loginbutton.jpg"), "/" %>            
            <%= image_tag "headerslice.jpg", :style => "width:30px; height:50px;" %>
            <%= link_to image_tag("facebook-logo-square.png", :size => "40x40", :style => "margin-bottom:5px"), "http://www.facebook.com/whichbus" %>
            <%= link_to image_tag("twitter.png", :size => "40x40", :style => "margin-bottom:5px"), "http://www.twitter.com/whichbus" %>
		</div>
		<div class="row" style="text-align:center;">
			<% flash.each do |name, msg| %>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<% end %>
			<%= content_tag :h1, yield(:title) if show_title? %>
		</div>
		<%= yield(:desktop) %>
    <%= yield %>
	</div>
  
  </body>
</html>
